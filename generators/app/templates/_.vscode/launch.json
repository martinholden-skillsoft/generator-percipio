  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch (PRODUCTION - Using .env configuration file)",
      "program": "${workspaceFolder}/app.js",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "PRODUCTION"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch (DEVELOPMENT - Using .env configuration file)",
      "program": "${workspaceFolder}/app.js",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "DEVELOPMENT"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch (PRODUCTION - Using env options from VSCODE)",
      "program": "${workspaceFolder}/app.js",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "PRODUCTION",
        "ORGID": "YOURORGID",
        "BEARER": "YOURBEARER",
        "BASEURL": "https://dew1-api.percipio.com"
      }
    }
  ]
}